package chap04.sec01;

import java.util.Scanner;

public class IfStatement {
	static Scanner sc = new Scanner(System.in);	// 멤버필드 | 멤버 변수
	public static void main(String[] args) {
		// method1();
		// method2();
		// method3();
		// method4();
		// method5();
		// method6();
		method7();
	}
	
	public static void method1() {
		// 사용자 이름과 점수를 입력 받아 60점 이상이면
		//	"이름 합격입니다" 메시지 출력
		String message = "";
		System.out.print("이름 입력 : ");
		String name = sc.nextLine();
		System.out.print("점수 입력 : ");
		int score = sc.nextInt();
		
		if(score >= 60) {
			message = name + "은(는) 합격입니다.";
			System.out.println(message);
		}
	}
	public static void method2() {
		// 사용자 이름과 점수를 입력 받아 60점 이상이면
		//	"이름 합격입니다" 메시지 출력
		// 60점 이하이면 "이름 불합격입니다" 메시지 출력
		
		String message = "";
		System.out.print("이름 입력 : ");
		String name = sc.nextLine();
		System.out.print("점수입력 : ");
		int score = sc.nextInt();
		
		if(score >= 60) {
			message = name + "은(는) 합격입니다";
		}else {
			message = name + "은(는) 불합격입니다";
		}
		System.out.println(message);
	}

	public static void method3() {
		/* [문제1] 월을 입력받아
		   3~5월 : "봄 입니다"
		   6~8월 : "여름 입니다"
		   9~11월 : "가을 입니다"
		   12~2월 : "겨울 입니다" 를 출력하는 프로그램 작성 */
		
		
		System.out.print("월 입력 : ");
		int month = sc.nextInt();
		
		if(month >= 3 && month <= 5) {
			System.out.print("봄 입니다");
		}else if(month >= 6 && month <= 8) {
			System.out.print("여름 입니다");
		}else if(month >= 9 && month <= 11){
			System.out.println("가을 입니다");
		}else if(month >= 12 && month <=2) {
			System.out.println("겨울 입니다");
		}
		
	}
	
	public static void method4() {
	
/*	  [문제2] 체중과 키를 입력하여 BMI지수를 구하고 BMI지수에 따른 평가를 출력하는 프로그램 작성
	  
	  BMI지수 = 체중(kg) / (키(m) * 키(m))
	  
	      BMI지수                         판정
	  ---------------------------
	    0.0  ~ 18.4       저체중
	    18.5 ~ 22.9       정   상
	    23.0 ~ 24.9       과체중
	    25.0 ~ 29.9       비   만
	    30.0 ~ 그 이상              고도비만*/
	
		System.out.print("체중 입력: ");
		double kg = sc.nextDouble();
		
		System.out.print("키 입력: ");
		double cm = sc.nextDouble();
		
		double m = cm/100;
		double BMI = kg / (m * m);
		
		if(0.0 <= BMI && BMI <= 18.4) {
			System.out.print("저체중");
		}else if(18.5 <= BMI && BMI <= 22.9) {
			System.out.print("정   상");
		}else if(23.0 <= BMI && BMI <= 24.9) {
			System.out.print("과체중");
		}else if(25.0 <= BMI && BMI <= 29.9) {
			System.out.print("비만");
		}else if(30.0 <= BMI) {
			System.out.print("고도비만");
		}
		
				
	}
	
	public static void method5() {
/*	[문제] 헌혈하려고한다 헌혈의 조건은 나이가 18세 이상이며, 몸무게가 50kg 이상이어야한다
 * 		이를 중첩 if문을 사용하여 구성하시오.
 * 		나이와 몸무게는 설정함(=연산자 사용)		*/
		
		System.out.print("나이 : ");
		int age = sc.nextInt();
		System.out.print("몸무게 : ");
		double kg = sc.nextDouble();
		
		if(age >= 18) {
			if(kg >= 50.0) {
			System.out.print("헌혈이 가능합니다");
			}else {
			System.out.print("헌혈이 불가능합니다");
			}
			}else {
			System.out.print("헌혈이 불가능합니다");
		}
		}
		
		
//		if(조건) {
//		조건이면 여기 실행
//		}else {
//		}
 

	
	public static void method6() {
	//	[문제] 임의의 수를 입력 받아 홀수와 짝수를 판별하시오.
		
		String x = "";
		System.out.print("숫자를 입력하세요 : ");
		int num = sc.nextInt();
		
		x = num % 2 == 0 ? "짝수" : "홀수";
		System.out.print(x);
	
	}
	
	
	
	public static void method7() {
	/*	[문제] 점수를 입력받아 그 값이
				99-97 : A+
				96-93 : A0
				92-90 : A-
				
				89-87 : B+
				86-83 : B0
				82-80 : B-
				
				79-77 : C+
				76-73 : C0
				72-70 : C-
				그 이하는 F
				=> 중첩 if 사용*/
		
		
		
	}
}


