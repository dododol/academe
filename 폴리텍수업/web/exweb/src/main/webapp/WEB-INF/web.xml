<!--   	<load-on-startup>0</load-on-startup> 시작시 로드 -->
<!--   	0이상의 정수 설정 : 웹앱(톰캣) 시작시,  -->
<!--   		숫자순서에 따라서 서블릿 객체 생성 -->
<!--   	음수로 설정 : 서버(톰캣)이 필요하다고 생각할 때 서블릿 객체 생성 -->
<!--   		일반적으로 서블릿의 주소로 요청을 받았을 때 생성 -->
<!--   </servlet> -->
  
  <listener>
  	<listener-class>com.exam.myapp.comm.MyListener</listener-class>
  </listener>
  
<!--   서블릿컨텍스트의 초기화 파라미터 설정 -->
  <context-param>
  	<param-name>cn</param-name>
  	<param-value>oracle.jdbc.OracleDriver</param-value>
  </context-param>
  
  
  
</web-app>

















